// tsconfig.json
{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false
    },
    "compilerOptions": {
      "lib": [ "es2015", "es5", "es6", "dom" ]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        },
        "no-console": false
    }
}
